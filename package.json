{
  "name": "contents-hub",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "A web content subscription service with AI-powered monitoring",
  "scripts": {
    "dev": "pnpm run -r --parallel --stream dev",
    "dev:server": "pnpm --filter @contents-hub/server dev",
    "dev:client": "pnpm --filter @contents-hub/client dev",
    "dev:extension": "pnpm --filter @contents-hub/extension dev",
    "build": "pnpm run -r --parallel --stream build",
    "build:server": "pnpm --filter @contents-hub/server build",
    "build:client": "pnpm --filter @contents-hub/client build",
    "build:extension": "pnpm --filter @contents-hub/extension build",
    "check": "biome check",
    "check:staged": "biome check --staged --no-errors-on-unmatched",
    "fix": "biome check --write",
    "lint": "biome lint",
    "format": "biome format --write",
    "typecheck": "pnpm run -r --parallel --stream typecheck",
    "test": "pnpm run -r --parallel --stream test",
    "generate:swagger": "pnpm --filter @contents-hub/server generate:swagger",
    "generate:api": "pnpm --filter @contents-hub/extension generate:api",
    "generate": "pnpm generate:swagger && pnpm generate:api"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.2"
}

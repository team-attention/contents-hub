{
  "name": "contents-hub",
  "version": "0.0.1",
  "private": true,
  "description": "A web content subscription service with AI-powered monitoring",
  "scripts": {
    "dev:server": "pnpm --filter @contents-hub/server dev",
    "dev:client": "pnpm --filter @contents-hub/client dev",
    "dev:extension": "pnpm --filter @contents-hub/extension dev",
    "build": "pnpm -r build",
    "build:server": "pnpm --filter @contents-hub/server build",
    "build:client": "pnpm --filter @contents-hub/client build",
    "build:extension": "pnpm --filter @contents-hub/extension build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.2"
}
